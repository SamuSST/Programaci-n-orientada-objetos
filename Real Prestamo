package com.mycompany.project1;


import java.util.Scanner; 
public class Producto {
    public static void main(String[] args) {
        //TODO code application logic here
        Scanner tem = new Scanner (System.in);
        int num1;
        int num2;
        double interesmensual;
        double res;

        
        
        System.out.println("Ingrese el valor del prestamo");
        num1 = tem.nextInt();
        System.out.println("Ingrese el numero de cuotas");
        num2 = tem.nextInt();
        System.out.println("Ingrese la tasa de inter√©s anual (en porcentaje):");
        interesmensual = tem.nextDouble();

//resultado de el total a pagar con todo y intereses       
        res =num1+(num1*(interesmensual/100)* num2);
        System.out.println(" total a pagar"+ res);
        
//resultado de valor de cada mes
        System.out.println("valor mes"+ res / num2);
    }
        
        
    }
   
